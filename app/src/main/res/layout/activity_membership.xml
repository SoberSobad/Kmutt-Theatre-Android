<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".membership.MembershipActivity">


    <Button
        android:id="@+id/regisButt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:backgroundTint="#ffffff"
        android:text="Sign up"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/loginButt"
        app:layout_constraintTop_toBottomOf="@+id/loginButt" />

    <Button
        android:id="@+id/loginButt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_bg"
        android:text="Log in"
        android:textColor="#EEECEC"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passInput" />

    <EditText
        android:id="@+id/userInput"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/changecolor"
        android:ems="10"
        android:hint="Username or Email"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:textColor="#ffffff"
        android:textColorHint="#9E9E9E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18" />

    <EditText
        android:id="@+id/passInput"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/changecolor"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="20"
        android:textColor="#ffffff"
        android:textColorHint="#9E9E9E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userInput" />

    <TextView
        android:id="@+id/redText"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:inputType="textMultiLine"
        android:textColor="#FF0000"
        app:layout_constraintEnd_toEndOf="@+id/loginButt"
        app:layout_constraintTop_toTopOf="@+id/regisButt" />

    <Button
        android:id="@+id/forgetButt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:text="Forget password?"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="@+id/loginButt"
        app:layout_constraintTop_toBottomOf="@+id/loginButt" />

</android.support.constraint.ConstraintLayout>