<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kmutt.sit.theater">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivityV2"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".membership.MembershipActivity"
            android:screenOrientation="sensorPortrait"
            android:launchMode="singleTask" />
        <activity android:name=".membership.RegisterActivity"
            android:screenOrientation="sensorPortrait" />
        <activity android:name=".membership.TopupActivity"
            android:screenOrientation="sensorPortrait" />
        <activity android:name=".membership.InfoActivity"
            android:screenOrientation="sensorPortrait" />
        <activity android:name=".membership.EditActivity"
            android:screenOrientation="sensorPortrait" />
        <activity android:name=".membership.ChangePasswordActivity"
            android:screenOrientation="sensorPortrait" />
        <activity android:name=".booking.PaymentActivity"
            android:screenOrientation="sensorPortrait" />
        <activity android:name=".booking.ConfirmationActivity"
            android:screenOrientation="sensorPortrait" />
        <activity android:name=".booking.SeatActivity"
            android:screenOrientation="sensorPortrait" />
        <activity android:name=".booking.showtimes.ShowtimesActivity"
            android:screenOrientation="sensorPortrait" />
        <activity android:name=".membership.ForgetPasswordActivity"
            android:screenOrientation="sensorPortrait" />
        <activity android:name=".membership.PointHistoryActivity"
            android:screenOrientation="sensorPortrait" />
    </application>

</manifest>