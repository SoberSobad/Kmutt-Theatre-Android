<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kmutt.sit.theater">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivityV2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".membership.MembershipActivity"
            android:launchMode="singleTask" />
        <activity android:name=".membership.RegisterActivity" />
        <activity android:name=".membership.TopupActivity" />
        <activity android:name=".booking.PaymentActivity" />
        <activity android:name=".booking.ConfirmationActivity" />
        <activity android:name=".booking.SeatActivity" />
        <activity android:name=".membership.InfoActivity" />
        <activity android:name=".membership.EditActivity" />
    </application>

</manifest>